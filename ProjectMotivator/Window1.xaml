<Window x:Class="ProjectMotivator.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectMotivator"
        mc:Ignorable="d"
        Title="Добавить цитату" Height="200" Width="800" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="newQuote" HorizontalAlignment="Center" Height="61" Margin="0,5,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="760" FontSize="16" FontStyle="Italic" Text="&lt;Цитата&gt;"/>
        <TextBox x:Name="newAuthor" HorizontalAlignment="Center" Height="30" Margin="0,73,0,0" TextWrapping="Wrap" Text="&lt;Имя&gt;" VerticalAlignment="Top" Width="760" FontSize="18" FontWeight="Bold"/>
        <Button x:Name="button" Content="Добавить" HorizontalAlignment="Center" Margin="0,109,0,0" VerticalAlignment="Top" Width="760" Height="40" FontSize="20" Click="Button_Click"/>

    </Grid>
</Window>
